{% extends 'templateAdmin.twig' %}
{% block title %}
    Chapitres - {{parent()}}
{% endblock %}

{% block h1 %}Les chapitres{% endblock %}

{% block h2 %}{% endblock %}

{% block body %} 
    <table class="table table-striped"> 
        
        <thead>
            <tr>
                <th scope="col">N°chapitre</th>
                <th scope="col">Titre</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
        {% for article in articles %}        
            <tr>  
                <td scope="row">{{article.articleNumber}}</td>
                <td><a href="index.php?action=adminArticle&amp;id={{article.id}}">{{article.title}}</a></td>
                <td>
                    <a href="index.php?action=adminArticle&amp;id={{article.id}}"><button><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></a>

                    <!-- Button trigger modal -->
                        <button class="confirmation" data-toggle="modal" data-target="#confirmation"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

                    <!-- Modal -->
                    <div class="modal fade alert alert-danger" id="confirmation" role="dialog">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title"><strong>Attention</strong></h4>
                                </div>
                                <div class="modal-body">
                                    <p>Vous êtes sur le point de supprimer ce chapitre, voulez-vous continuer ?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                    <a href="index.php?action=deleteArticle&amp;id={{article.id}}"><button type="button" class="btn btn-primary">Confirmer</button></a>
                                </div>
                            </div>
                        </div>
                    </div>                  
                </td>
            </tr>
        {% endfor %}                                                                     
        </tbody>   
    </table>
{% endblock %}

{% block script %}
{% endblock %}                